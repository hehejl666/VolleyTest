<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/slategrey"
    android:orientation="vertical"
    tools:context="com.example.heiton.volleytest.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/id_text_pagenow"
            android:text="pagenow"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/antiquewhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_text_allpage"
            android:text="pagenow"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/antiquewhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/id_text_alltotal"
            android:text="pagenow"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textColor="@color/antiquewhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.etsy.android.grid.StaggeredGridView

            android:id="@+id/idstaggergridView"

            app:item_margin="5dp"
            app:column_count="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.etsy.android.grid.StaggeredGridView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
